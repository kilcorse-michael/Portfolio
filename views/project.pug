extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= projects.project_name

        p.lead.text-light
          | #{projects.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
        each technology in projects.technologies
          li= technology

        a.button.expanded(target='_blank' href=`${projects.live_link}`) Live Demo
        if projects.github_link
          a.button.expanded(target='_blank' href=`${projects.github_link}`) GitHub Repo
        else
          p. 
            X (private repository for employer)
    
    each projectImage in projects.project_page_urls
        img.image(src= projectImage)
  
